@model MovieApp.Entity.BookingModel
@{
    ViewData["Title"] = "EditBookingDetails";
}

<h1>EditBookingDetails</h1>

<a asp-action="Index" asp-controller="DisplayMovieTime">Show MovieTime Details</a>
<hr/>
<h1>InsertMovieShowTime</h1>
<hr />
<form method="post">
     <div class="form-group">
        <label for="MovieId">BookingId</label>
        <input type="text" class="form-control" asp-for="BookingId" disabled="disabled"/>
    </div>

    <div class="form-group">
        <label>User</label>
        @*<input type="text" class="form-control" asp-for="MovieId" />*@
        <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.userShowList,"Value","Text"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Theatre</label>
        @*<input type="text" class="form-control" asp-for="TheatreId" />*@
        <select asp-for="TheatreId" asp-items="@(new SelectList(ViewBag.theatreShowList,"Value","Text"))" class="form-control"></select>
    </div>

   <div class="form-group">
        <label>Movie</label>
        @*<input type="text" class="form-control" asp-for="MovieId" />*@
        <select asp-for="MovieId" asp-items="@(new SelectList(ViewBag.movieShowList,"Value","Text"))" class="form-control"></select>
    </div>
    
     <div class="form-group">
        <label>Time Slot</label>
        @*<input type="text" class="form-control" asp-for="TheatreId" />*@
        <select asp-for="ShowTime" asp-items="@(new SelectList(ViewBag.bookingShowList,"Value","Text"))" class="form-control"></select>
    </div>

    
    <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control" asp-for="date" />
    </div>
   
    <div class="form-group">
        <label>seats</label>
        <input type="text" class="form-control" asp-for="Seats" />
    </div>
    
    <input type="submit" value="Save" class="btn btn-primary" />
    <input type="button" value="Reset" class="btn btn-secondary" />
</form>
@if (ViewBag.status == "Success")
{
    <div class="alert alert-success">@ViewBag.message</div>
}
else if (ViewBag.status == "Error")
{
    <div class="alert alert-danger">@ViewBag.message</div>   
}

