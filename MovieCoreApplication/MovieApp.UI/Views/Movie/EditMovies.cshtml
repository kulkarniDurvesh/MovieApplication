@model MovieApp.Entity.MovieModel
@{
    ViewData["Title"] = "Edit Movie";
}



<h1>Edit Movie</h1>


<form method="post">
    <div class="form-group">
        <label for="MovieId">MovieId</label>
        <input type="text" class="form-control" asp-for="MovieId" disabled="disabled"/>
    </div>
    <div class="form-group">
        <label for="MovieName">MovieName</label>
        <input type="text" class="form-control" asp-for="MovieName"/>
    </div>
    <div class="form-group">
        <label for="DirectorName">DirectorName</label>
        <input type="text" class="form-control" asp-for="DirectorName"/>
    </div>
   <div class="form-group">
        <label for="ActorName">ActorName</label>
        <input type="text" class="form-control" asp-for="ActorName"/>
    </div>
    <div class="form-group">
        <label for="ActressName">ActressName</label>
        <input type="text" class="form-control" asp-for="ActressName"/>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" asp-for="Price"/>
    </div>
    <input type="submit" class="btn btn-primary" value="Update">
    <button type="button" class="btn btn-secondary">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
       <div class="alert alert-success">
            @ViewBag.message
        </div> 
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>   
    }

</form>

<div>
<button class="bg-light"><a asp-action="SelectMovies" asp-controller="Movie">Movie Details</a></button>&nbsp;<button class="bg-light"><a asp-action="AddMovie" asp-controller="Movie">Add Movie</a></button>
</div>
