@model IEnumerable<MovieApp.Entity.MovieModel>
@{
    ViewData["Title"] = "SelectMovies";
}

<h1>SelectMovies</h1>
<hr />
<form>
<table class="table table-striped">
  <tr><td></td><td>Id</td> <td>Movie</td> <td>Actor</td> <td>Actress</td><td>Edit</td><td>Delete</td></tr>
    @{
    
    foreach(var item in Model)
    {
           <tr><td><input type="checkbox" /></td><td>@item.MovieId</td><td>@item.MovieName </td><td>@item.ActorName</td><td>@item.ActressName</td>
           <td><a asp-action="EditMovies" asp-controller="Movie" asp-route-MovieId="@item.MovieId">Edit</a></td>
           <td><a asp-action="Delete" asp-controller="Movie" asp-route-MovieId="@item.MovieId">Delete</a></td>
           </tr>

    }

}

</table>
</form>